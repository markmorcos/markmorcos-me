{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__test__/**", "**/*.test.tsx"]
}
